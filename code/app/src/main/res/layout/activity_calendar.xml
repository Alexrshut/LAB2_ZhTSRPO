<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#085394"
    tools:context=".calendar.CalendarActivity">

    <TextView
        android:id="@+id/text_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="Выберите дату вылета"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:paddingHorizontal="16dp" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/white"
        android:dateTextAppearance="@style/CalendarDateTextAppearance"
        android:theme="@style/CalendarTheme"
        android:weekDayTextAppearance="@style/CalendarWeekTextAppearance"
        android:layout_marginHorizontal="16dp" />

    <include layout="@layout/bottom_button" />

</LinearLayout>